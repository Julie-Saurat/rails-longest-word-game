<h1>New Game</h1>

<div class="letters">
  <% @letters.each do |letter| %>
    <h2 class="letter"><%= letter %></h2>
  <% end %>
</div>

<div class="word">
  <p>What's the longest word you can make?</p>
  <form action="/score" method="post" id="form">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="response" placeholder= "your word" id="user-input">
    <input type="submit" value="Play!" id="sub">
  </form>
</div>
